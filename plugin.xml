<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="dk.itu.big_red.export.text" name="Text-based model exporters" schema="expoints/dk.itu.big_red.export.text.exsd"/>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="dk.itu.big_red.application.standalone.RedApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="dk.itu.big_red.application.plugin.Perspective"
            icon="icons/icon32.png"
            id="dk.itu.big_red.perspective"
            name="Big Red">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <newWizardShortcut
               id="dk.itu.big_red.NewAgentWizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="dk.itu.big_red.NewBRSWizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="dk.itu.big_red.NewRuleWizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="dk.itu.big_red.NewSignatureWizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="dk.itu.big_red.application"
            description="The graphical development environment for bigraphs"
            name="Big Red">
         <property
               name="windowImages"
               value="icons/icon16.png,icons/icon32.png">
         </property>
         <property
               name="appName"
               value="Big Red">
         </property>
         <property
               name="aboutImage"
               value="content/logo-big.png">
         </property>
         <property
               name="aboutText"
               value="Big Red, the graphical development environment for&#x0A;bigraphs&#x0A;Copyright © 2009, 2010 Alexander Faithfull. All rights&#x0A;reserved.&#x0A;&#x0A;Big Red is built on the Eclipse Rich Client Platform.&#x0A;Copyright © Eclipse contributors and others 2000,&#x0A;2009.  All rights reserved. Visit http://eclipse.org/ .&#x0A;&#x0A;This product includes software developed by the&#x0A;Apache Software Foundation, http://apache.org/ .">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="startupProgressRect"
               value="2,284,451,10">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupMessageRect"
               value="22,264,411,20">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="dk.itu.big_red.editors.bigraph.BigraphEditor"
            contributorClass="dk.itu.big_red.editors.bigraph.BigraphEditorActionBarContributor"
            default="true"
            extensions="bigraph, bigraph-agent"
            icon="icons/icon16.png"
            id="dk.itu.big_red.BigraphEditor"
            name="Bigraph Editor">
         <contentTypeBinding
               contentTypeId="dk.itu.big_red.bigraph">
         </contentTypeBinding>
      </editor>
      <editor
            class="dk.itu.big_red.editors.signature.SignatureEditor"
            contributorClass="dk.itu.big_red.editors.signature.SignatureEditorActionBarContributor"
            default="false"
            extensions="bigraph-signature"
            icon="icons/icon16.png"
            id="dk.itu.big_red.SignatureEditor"
            name="Signature Editor">
         <contentTypeBinding
               contentTypeId="dk.itu.big_red.signature">
         </contentTypeBinding>
      </editor>
      <editor
            class="dk.itu.big_red.editors.rule.RuleEditor"
            contributorClass="dk.itu.big_red.editors.rule.RuleEditorActionBarContributor"
            default="false"
            extensions="bigraph-rule"
            icon="icons/icon16.png"
            id="dk.itu.big_red.RuleEditor"
            name="Rule Editor">
         <contentTypeBinding
               contentTypeId="dk.itu.big_red.rule">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <category
            id="dk.itu.big_red"
            name="Big Red">
      </category>
      <wizard
            category="dk.itu.big_red"
            class="dk.itu.big_red.wizards.export.BigraphPNGExportWizard"
            icon="icons/wizards/bitmap.png"
            id="Big Red.BitmapExportWizard"
            name="Export as bitmap image">
         <description>
            Export the current bigraph as a bitmap image, suitable for embedding into webpages or for low-resolution printing.
         </description>
      </wizard>
      <wizard
            category="dk.itu.big_red"
            class="dk.itu.big_red.wizards.export.BigraphTextExportWizard"
            icon="icons/wizards/text.png"
            id="Big Red.TikZExportWizard"
            name="Export as text">
         <description>
            Export a bigraph in a textual form.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="dk.itu.big_red"
            name="Big Red">
      </category>
      <primaryWizard
            id="dk.itu.big_red.NewBRSWizard">
      </primaryWizard>
      <wizard
            category="dk.itu.big_red"
            class="dk.itu.big_red.wizards.creation.NewBRSWizard"
            finalPerspective="dk.itu.big_red.perspective"
            icon="icons/icon16.png"
            id="dk.itu.big_red.NewBRSWizard"
            name="Bigraphical reactive system"
            project="true">
         <description>
            Create a new bigraphical reactive system.
         </description>
      </wizard>
      <wizard
            category="dk.itu.big_red"
            class="dk.itu.big_red.wizards.creation.NewAgentWizard"
            finalPerspective="dk.itu.big_red.perspective"
            icon="icons/icon16.png"
            id="dk.itu.big_red.NewAgentWizard"
            name="Agent">
         <description>
            Create a new agent in an existing bigraphical reactive system.
         </description>
      </wizard>
      <wizard
            category="dk.itu.big_red"
            class="dk.itu.big_red.wizards.creation.NewSignatureWizard"
            finalPerspective="dk.itu.big_red.perspective"
            icon="icons/icon16.png"
            id="dk.itu.big_red.NewSignatureWizard"
            name="Signature"
            project="false">
         <description>
            Create a new signature in an existing bigraphical reactive system.
         </description>
      </wizard>
      <wizard
            category="dk.itu.big_red"
            class="dk.itu.big_red.wizards.creation.NewRuleWizard"
            finalPerspective="dk.itu.big_red.perspective"
            icon="icons/icon16.png"
            id="dk.itu.big_red.NewRuleWizard"
            name="Rule">
         <description>
            Create a new rule in an existing bigraphical reactive system.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="bigraph, bigraph-agent"
            id="dk.itu.big_red.bigraph"
            name="Bigraph"
            priority="normal">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="bigraph-rule"
            id="dk.itu.big_red.rule"
            name="Rule"
            priority="normal">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="bigraph-signature"
            id="dk.itu.big_red.signature"
            name="Signature"
            priority="normal">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="bigraph-simulation-spec"
            id="dk.itu.big_red.simulation_spec"
            name="Simulation spec"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="dk.itu.big_red.export.text">
      <exporter
            class="dk.itu.big_red.model.import_export.BigraphTikZExport"
            icon="icons/wizards/vector.png"
            id="big-red.exporter1"
            name="TikZ image">
         <description>
            Export a bigraph as a TikZ image, suitable for use in papers or high-resolution printing.
         </description>
      </exporter>
      <exporter
            class="dk.itu.big_red.model.import_export.BigraphXMLExport"
            icon="icons/icon16.png"
            id="big-red.exporter2"
            name="XML">
         <description>
            Export a bigraph as a XML document, equivalent to that produced by File → Save.
         </description>
      </exporter>
      <exporter
            class="dk.itu.big_red.model.import_export.BigraphTraverseExport"
            icon="icons/wizards/text.png"
            id="big-red.exporter3"
            name="Traverse">
      </exporter>
      <exporter
            class="dk.itu.big_red.model.import_export.BigraphBPLToolExport"
            id="big-red.exporter4"
            name="BPL Tool">
      </exporter>
      <exporter
            class="dk.itu.big_red.model.import_export.BigraphBigMCExport"
            id="big-red.exporter.bigmc"
            name="BigMC">
      </exporter>
   </extension>

</plugin>
