<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="dk.itu.big_red.intro.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="dk.itu.big_red.intro.Perspective"
            id="Big_Red.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="Big_Red.application"
            name="Big Red">
         <property
               name="windowImages"
               value="icons/icon32.png">
         </property>
         <property
               name="appName"
               value="Big Red">
         </property>
         <property
               name="aboutImage"
               value="content/logo-big.png">
         </property>
         <property
               name="aboutText"
               value="Big Red, the integrated development environment for bigraphs&#x0A;v.1.0.0.1001-dk&#x0A;Copyright © 2009, 2010 Alexander Faithfull. All rights reserved.&#x0A;&#x0A;Big Red is built on the Eclipse Rich Client Platform.&#x0A;Copyright © Eclipse contributors and others 2000, 2009.  All rights reserved.&#x0A;Visit http://eclipse.org/&#x0A;&#x0A;This product includes software developed by the Apache Software Foundation, http://apache.org/.">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="startupProgressRect"
               value="2,284,451,10">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupMessageRect"
               value="22,264,411,20">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="big_red.intro">
      </intro>
      <introProductBinding
            introId="big_red.intro"
            productId="Big_Red.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="big_red.intro"
            content="introContent.xml"
            id="Big_Red.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="dk.itu.big_red.GraphicalEditor"
            contributorClass="dk.itu.big_red.GraphicalEditorActionBarContributor"
            default="true"
            id="big_red.graphicaleditor"
            name="GraphicalEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <wizard
            class="dk.itu.big_red.wizards.ExportBitmapWizard"
            icon="icons/wizards/bitmap.png"
            id="Big Red.BitmapExportWizard"
            name="Export as bitmap image">
         <description>
            Export the current bigraph as a bitmap image, suitable for embedding into webpages or for low-resolution printing.
         </description>
      </wizard>
      <wizard
            class="dk.itu.big_red.wizards.ExportVectorWizard"
            icon="icons/wizards/vector.png"
            id="Big Red.VectorExportWizard"
            name="Export as vector image">
         <description>
            Export the current bigraph as a (scalable) vector image, suitable for use in papers and high-resolution printing.
         </description>
      </wizard>
   </extension>

</plugin>
