	<xsd:annotation>
		<xsd:documentation>
			<html xmlns="http://www.w3.org/1999/xhtml">
				<body>
					<a id="parent_identifiers" />
					<h2>
						Parent identifiers
					</h2>
					<p>
						A <i>parent identifier</i> is one of the following elements:
					</p>
					<ul>
						<li>
							<a href="#bigraph-id">bigraph-id</a>,
						</li>
						<li>
							<a href="#node-id">node-id</a>, or
						</li>
						<li>
							<a href="#root-id">root-id</a>.
						</li>
					</ul>
					<hr />
				</body>
			</html>
		</xsd:documentation>
	</xsd:annotation>
